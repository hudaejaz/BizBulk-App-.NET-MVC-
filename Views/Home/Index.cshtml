                    </div>
                    <div class="shop-body">
                        <h3>Home Appliances<br>Collection</h3>
                        <a href="@Url.Action("HomeAppliances", "Home")" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
