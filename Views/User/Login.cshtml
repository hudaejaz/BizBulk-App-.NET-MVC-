@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - B2B Wholesale Platform</title>
    <!-- Bootstrap CSS -->
    <link href="style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Login Section -->
    <section class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4">Login</h2>

            <!-- Tabs for Buyer/Seller Login -->
            <ul class="nav nav-tabs mb-3" id="loginTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="buyer-tab" data-bs-toggle="tab" data-bs-target="#buyer-login" type="button" role="tab" aria-controls="buyer-login" aria-selected="true">
                        Login as Buyer
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="seller-tab" data-bs-toggle="tab" data-bs-target="#seller-login" type="button" role="tab" aria-controls="seller-login" aria-selected="false">
                        Login as Seller
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="loginTabContent">
                <!-- Buyer Login -->
                <div class="tab-pane fade show active" id="buyer-login" role="tabpanel" aria-labelledby="buyer-tab">
                    <form asp-action="Login" asp-controller="User" method="post">
                        <!-- Email Input -->
                        <div class="mb-3">
                            <label for="buyer-email" class="form-label">Email Address</label>
                            <input type="email" name="email" class="form-control" id="buyer-email" placeholder="Enter your email" required>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="buyer-password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="buyer-password" placeholder="Enter your password" required>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-primary w-100">Login as Buyer</button>
                    </form>
                </div>

                <!-- Seller Login -->
                <div class="tab-pane fade" id="seller-login" role="tabpanel" aria-labelledby="seller-tab">
                    <form asp-action="Login" asp-controller="User" method="post">
                        <!-- Email Input -->
                        <div class="mb-3">
                            <label for="seller-email" class="form-label">Email Address</label>
                            <input type="email" name="email" class="form-control" id="seller-email" placeholder="Enter your email" required>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="seller-password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="seller-password" placeholder="Enter your password" required>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-primary w-100">Login as Seller</button>
                    </form>
                </div>
            </div>

            <!-- Register Link -->
            <div class="text-center mt-3">
                <p>
                    Don't have an account? <a href="@Url.Action("Register", "User")" class="text-decoration-none">Register</a>
                </p>
            </div>
        </div>
    </section>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
