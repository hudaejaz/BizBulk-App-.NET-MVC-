@{
    Layout = null;  // To remove layout for this page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - B2B Wholesale Platform</title>
    <!-- Bootstrap CSS -->
    <link href="style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Registration Section -->
    <section class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4">Register</h2>

            <!-- Tabs for Buyer/Seller Registration -->
            <ul class="nav nav-tabs mb-3" id="registerTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="buyer-reg-tab" data-bs-toggle="tab" data-bs-target="#buyer-register" type="button" role="tab" aria-controls="buyer-register" aria-selected="true">
                        Register as Buyer
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="seller-reg-tab" data-bs-toggle="tab" data-bs-target="#seller-register" type="button" role="tab" aria-controls="seller-register" aria-selected="false">
                        Register as Seller
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="registerTabContent">
                <!-- Buyer Registration -->
                <div class="tab-pane fade show active" id="buyer-register" role="tabpanel" aria-labelledby="buyer-reg-tab">
                    <form method="post" asp-action="Register">
                        <!-- Name Input -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="Name" placeholder="Enter your full name" required>
                        </div>

                        <!-- Email Input -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter your email" required>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Enter your password" required>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm-password" name="ConfirmPassword" placeholder="Confirm your password" required>
                        </div>

                        <!-- Hidden field for role (Buyer) -->
                        <input type="hidden" name="Role" value="Buyer">

                        <!-- Register Button -->
                        <button type="submit" class="btn btn-primary w-100">Register as Buyer</button>
                    </form>
                </div>

                <!-- Seller Registration -->
                <div class="tab-pane fade" id="seller-register" role="tabpanel" aria-labelledby="seller-reg-tab">
                    <form method="post" asp-action="Register">
                        <!-- Name Input -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="Name" placeholder="Enter your full name" required>
                        </div>

                        <!-- Email Input -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter your email" required>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Enter your password" required>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm-password" name="ConfirmPassword" placeholder="Confirm your password" required>
                        </div>

                        <!-- Hidden field for role (Seller) -->
                        <input type="hidden" name="Role" value="Seller">

                        <!-- Register Button -->
                        <button type="submit" class="btn btn-primary w-100">Register as Seller</button>
                    </form>
                </div>
            </div>

            <!-- Login Link -->
            <div class="text-center mt-3">
                <p>Already have an account? <a href="login.html" class="text-decoration-none">Login</a></p>
            </div>
        </div>
    </section>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
